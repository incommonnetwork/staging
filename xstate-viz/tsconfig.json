{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["dom", "es7"],
    "outDir": "./lib",
    "declaration": true
  },
  "include": ["src"]
}
